<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ARTL_DepartmentValidation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Department ,&quot;[a-zA-Z0-9 ./&apos;]*&quot;))</errorConditionFormula>
    <errorDisplayField>Department</errorDisplayField>
    <errorMessage>Department should not contain any Special Characters except ./,</errorMessage>
</ValidationRule>
