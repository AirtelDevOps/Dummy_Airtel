<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>BillingAddress</field>
        <field>AccountNumber</field>
        <field>CreatedBy</field>
        <field>Website</field>
        <field>Type</field>
        <field>vlocity_cmt__Status__c</field>
        <field>Rating</field>
        <field>Phone</field>
        <field>Ownership</field>
        <field>Parent</field>
        <field>vlocity_cmt__PrimaryContactId__c</field>
        <field>ARTL_Owner_OLM_Id__c</field>
        <field>RecordType</field>
        <field>vlocity_cmt__SLA__c</field>
        <field>ShippingAddress</field>
        <field>vlocity_cmt__PremisesId__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>sheriff.singla@salesforce.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sujay.dey-kbej@salesforce.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval Initiated</label>
        <name>Approval_Initiated</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Airtel_Account_New_Account_For_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Account.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Account_Status_to_Approve</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Account_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Account_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Airtel Account Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
